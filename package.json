{
  "name": "code-commands",
  "displayName": "Code Commands",
  "description": "Manage and execute your custom project commands globally in VS Code.",
  "version": "0.0.1",
  "publisher": "NicolasXs",
  "icon": "media/icon.png",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p .",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.0.0",
    "vsce": "^3.0.0"
  },
  "contributes": {
    "configuration": {
      "title": "Code Commands",
      "properties": {
        "code-commands.groups": {
          "type": "array",
          "default": [
            {
              "id": "default",
              "name": "Default",
              "commands": []
            }
          ],
          "description": "List of command groups with their commands.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "commands": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string"
                    },
                    "command": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeCommands",
          "title": "Code Commands",
          "icon": "media/terminal.svg"
        }
      ]
    },
    "views": {
      "codeCommands": [
        {
          "id": "commandsView",
          "name": "Code Commands"
        }
      ]
    },
    "commands": [
      {
        "command": "myCommands.addCommand",
        "title": "Add New Command"
      },
      {
        "command": "myCommands.runCommand",
        "title": "Run"
      },
      {
        "command": "myCommands.editCommand",
        "title": "Edit"
      },
      {
        "command": "myCommands.removeCommand",
        "title": "Remove"
      },
      {
        "command": "myCommands.refreshView",
        "title": "Refresh Commands"
      },
      {
        "command": "myCommands.addGroup",
        "title": "Add New Group"
      },
      {
        "command": "myCommands.renameGroup",
        "title": "Rename Group"
      },
      {
        "command": "myCommands.removeGroup",
        "title": "Remove Group"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "myCommands.addCommand",
          "when": "view == commandsView",
          "group": "navigation",
          "icon": {
            "light": "media/add.svg",
            "dark": "media/add.svg"
          }
        },
        {
          "command": "myCommands.addGroup",
          "when": "view == commandsView",
          "group": "navigation",
          "icon": {
            "light": "media/add.svg",
            "dark": "media/add.svg"
          }
        }
      ],
      "view/item/context": [
        {
          "command": "myCommands.runCommand",
          "when": "view == commandsView && viewItem == commandItem",
          "group": "inline",
          "icon": {
            "light": "media/play.svg",
            "dark": "media/play.svg"
          }
        },
        {
          "command": "myCommands.editCommand",
          "when": "view == commandsView && viewItem == commandItem",
          "group": "inline",
          "icon": {
            "light": "media/edit.svg",
            "dark": "media/edit.svg"
          }
        },
        {
          "command": "myCommands.removeCommand",
          "when": "view == commandsView && viewItem == commandItem",
          "group": "inline",
          "icon": {
            "light": "media/delete.svg",
            "dark": "media/delete.svg"
          }
        },
        {
          "command": "myCommands.renameGroup",
          "when": "view == commandsView && viewItem == commandGroup",
          "group": "inline",
          "icon": {
            "light": "media/edit.svg",
            "dark": "media/edit.svg"
          }
        },
        {
          "command": "myCommands.removeGroup",
          "when": "view == commandsView && viewItem == commandGroup",
          "group": "inline",
          "icon": {
            "light": "media/delete.svg",
            "dark": "media/delete.svg"
          }
        }
      ]
    }
  },
  "activationEvents": [
    "onView:commandsView",
    "onCommand:myCommands.addCommand",
    "onCommand:myCommands.runCommand",
    "onCommand:myCommands.editCommand",
    "onCommand:myCommands.removeCommand"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NicolasXs/code-commands.git"
  }
}
